  <% if current_user %>
      <section id="team" class="team section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title text-light">
          <h2 class="text-light">Celebration point summaries</h2>
        </div>

        <div class="row">

          <% @summaries.each do |district, details|%>
            <div class="col-lg-3 mt-4" data-aos="fade-up" data-aos-delay="100">
              <div class="member d-flex align-items-start">
                <div class="member-info">
                  <h4><%= district %></h4>
                  <span>Total: <%=details["total"]%></span>
                  <span>Alto: <%=details["alto"]%></span>
                  <span>Baritone: <%=details["baritone"]%></span>
                  <span>Soprano: <%=details["soprano"]%></span>
                  <span>Tenor: <%=details["tenor"]%></span>
                  <span>Base: <%=details["base"]%></span>
                </div>
              </div>
            </div>
          <%end%>

        </div>

      </div>
    </section>
  <% else%>
  <section id="hero" class="d-flex justify-cntent-center align-items-center">
    <div id="heroCarousel" data-bs-interval="5000" class="container carousel carousel-fade" data-bs-ride="carousel">
      <div class="carousel-item active">
        <div class="carousel-container">
          <h2 class="animate__animated animate__fadeInDown"> <span>Choir Database</span></h2>
          <p class="animate__animated animate__fadeInUp">Welcome to Watoto church choir database! Please submit your details. Click the link below</p>
          <%= link_to 'Add Choir Member', add_member_path, :class => "btn-get-started animate__animated animate__fadeInUp scrollto"%>
        </div>
      </div>

    </div>
  </section>
  <%end%>